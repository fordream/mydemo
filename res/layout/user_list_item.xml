<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/global_list_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg_selector"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/global_icon_1"
        android:layout_height="@dimen/global_icon_1"
        android:scaleType="centerCrop"
        android:src="@drawable/common_user_icon_default" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/global_padding1"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/nickname"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:singleLine="true"
            android:textColor="@color/item_first_grade_left_color"
            android:textSize="@dimen/global_font_size2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/sex"
                android:layout_width="23dp"
                android:layout_height="11dp"
                android:src="@drawable/common_sex_man_enable"
                android:visibility="gone" />

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:background="@drawable/common_item_jh_shap"
                android:drawableLeft="@drawable/user_man_icon"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/global_font_size7" />
            
            <TextView
                android:id="@+id/grade"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:text="VIP0"
                android:layout_marginLeft="@dimen/global_padding1"
                android:background="@drawable/common_item_vip_bg_shap"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/global_font_size7" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:singleLine="true"
                android:textColor="@color/item_second_grade_color"
                android:textSize="@dimen/global_font_size3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/newtag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/common_dong"
                android:visibility="gone" />

            <TextView
                android:id="@+id/newsTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/global_padding1"
                android:singleLine="true"
                android:textColor="@color/item_third_grade_color"
                android:textSize="@dimen/global_font_size3" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/rightFL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/hotArea"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/global_icon_1"
            android:layout_gravity="center|right"
            android:background="@drawable/common_btn_nor_shap" />

        <LinearLayout
            android:id="@+id/rightView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right|center"
            android:orientation="vertical" >
            
            <TextView
                android:id="@+id/rdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginBottom="5dp"
                android:gravity="right"
                android:textColor="@color/item_first_grade_right_color"
                android:textSize="@dimen/global_font_size3" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/submitBtn"
                    android:layout_width="66dp"
                    android:layout_height="29dp"
                    android:background="@drawable/common_btn_selector_other" />

                <TextView
                    android:id="@+id/submitTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/common_btn_text_color"
                    android:textSize="@dimen/global_font_size8" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>