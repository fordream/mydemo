<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   <LinearLayout
        android:id="@+id/guide_get_point_exp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/task_more_backgrounde"
        android:orientation="vertical" 
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grade_first_line_bg_color"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/new_hand_task_title_description"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/global_list_item_height_small"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="做任务有什么用？"
                android:textColor="@color/set_item_name_text_color"
                android:textSize="@dimen/global_font_size3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/new_hand_task_img"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/global_padding7"
            android:gravity="center|center_horizontal"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|center_horizontal"
                android:orientation="vertical" >
				<LinearLayout 
				    android:id="@+id/do_point_task"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
                <ImageView
                    android:id="@+id/point_task_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tasklist_effect1" />
                 <ImageView
               		 android:layout_width="wrap_content"
               		 android:layout_height="wrap_content"
                	 android:layout_gravity="center_vertical"
               		 android:layout_marginLeft="@dimen/global_padding8"
               		 android:src="@drawable/common_item_right_nor" />
				</LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/global_padding7"
                    android:layout_below="@id/do_point_task"
                    android:layout_marginLeft="@dimen/global_padding8"
                    android:text="做任务"
                    android:textColor="@color/task_point_exp_values_color"
                    android:textSize="@dimen/global_font_size4" />
            </RelativeLayout>

        

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/global_padding8"
                android:gravity="center|center_horizontal"
                android:orientation="vertical" >
			  <LinearLayout 
			      android:id="@+id/get_point"
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      android:orientation="horizontal">
                <ImageView
                    android:id="@+id/skip_point_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tasklist_effect2" />
                <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/global_padding8"
                android:src="@drawable/common_item_right_nor" />
			 </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/global_padding7"
                    android:layout_below="@id/get_point"
                    android:layout_marginLeft="@dimen/global_padding8"
                    android:text="得积分"
                    android:textColor="@color/task_point_exp_values_color"
                    android:textSize="@dimen/global_font_size4" />
            </RelativeLayout>

            

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/global_padding8"
                android:gravity="center|center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/shop_market"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tasklist_effect3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/global_padding7"
                    android:text="兑换商品"
                    android:textColor="@color/task_point_exp_values_color"
                    android:textSize="@dimen/global_font_size4" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_line_width"
            android:layout_marginTop="@dimen/global_padding2"
            android:background="@drawable/common_content_divider_line" />

        <LinearLayout
            android:id="@+id/new_hand_task_img"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/global_padding9"
            android:layout_marginTop="@dimen/global_padding7"
            android:gravity="center|center_horizontal"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center|center_horizontal"
                android:orientation="vertical" >
				<LinearLayout
				    android:id="@+id/do_exp_task"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
                <ImageView
                    android:id="@+id/exp_task_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tasklist_effect1" />
                 <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/global_padding8"
                android:src="@drawable/common_item_right_nor" />
				</LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/global_padding7"
                     android:layout_marginLeft="@dimen/global_padding8"
                    android:layout_below="@id/do_exp_task"
                    android:text="做任务"
                    android:textColor="@color/task_child_point_exp_values_color"
                    android:textSize="@dimen/global_font_size4" />
            </RelativeLayout>

           

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/global_padding8"
                android:gravity="center|center_horizontal"
                android:orientation="vertical" >
			<LinearLayout 
			    android:id="@+id/get_exp"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal">
                <ImageView
                    android:id="@+id/exp_value_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tasklist_effect5" />
                 <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/global_padding8"
                android:src="@drawable/common_item_right_nor" />
			</LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/global_padding7"
                    android:layout_marginLeft="@dimen/global_padding7"
                    android:layout_below="@id/get_exp"
                    android:text="得经验值"
                    android:textColor="@color/task_point_exp_values_color"
                    android:textSize="@dimen/global_font_size4" />
            </RelativeLayout>

           

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/global_padding8"
                android:gravity="center|center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/up_grade_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tasklist_effect6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/global_padding7"
                    android:text="升级"
                    android:textColor="@color/task_point_exp_values_color"
                    android:textSize="@dimen/global_font_size4" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    

</LinearLayout>