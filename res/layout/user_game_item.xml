<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:iwgame="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout android:id="@+id/user_role_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="@dimen/global_padding1"
        android:visibility="gone"
        >
    <com.iwgame.msgs.widget.roundedimageview.RoundedImageView
        android:id="@+id/game_icon_image"
        android:layout_width="@dimen/global_icon8"
        android:layout_height="@dimen/global_icon8"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        iwgame:border_color="@color/global_color1"
        iwgame:border_width="0dp"
        iwgame:corner_radius="10dp"
        iwgame:oval="false"
        />

        <TextView
            android:id="@+id/game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_below="@id/game_icon_image"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/global_font_size3"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="@dimen/global_padding3"/>
       <ImageView
        android:id="@+id/tui_jian_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/game_icon_image"
        android:layout_alignTop="@id/game_icon_image"
        android:src="@drawable/tuijian" />
    </RelativeLayout>

</RelativeLayout>