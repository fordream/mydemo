<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudcolor"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="你还未报名陪玩，赶快去寻找女神和大神报名吧！"
        android:textColor="@color/global_color7"
        android:textSize="@dimen/global_font_size3" />

    <Button
        android:id="@+id/applyPlay"
        android:layout_width="134dp"
        android:layout_height="43dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/common_btn_ls_selector"
        android:text="寻找女神和大神"
        android:textColor="@color/common_btn_text_color"
        android:textSize="@dimen/global_font_size2"
        android:visibility="visible" />

</LinearLayout>