<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/launch_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/global_padding9"
        	android:gravity="bottom|center"
            >
            
            <TextView 
                android:id="@+id/load_tv_first_line"
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content" 
            	android:layout_gravity="center_horizontal"
            	android:textSize="@dimen/global_font_size5"
            	android:textColor="@color/global_color3"
                />
            
            <TextView 
                android:id="@+id/load_tv_second_line"
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content" 
            	android:layout_gravity="center_horizontal"
            	android:text="@string/copyright_notice_down"
            	android:textSize="@dimen/global_font_size5"
            	android:textColor="@color/global_color3"
                />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>