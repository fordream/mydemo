<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/point_detail_list_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/global_padding1" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/change_record_icon"
            android:layout_width="@dimen/global_icon1"
            android:layout_height="@dimen/global_icon1"
            android:layout_marginBottom="@dimen/global_padding7"
            android:layout_marginTop="@dimen/global_padding7"
            android:src="@drawable/common_default_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/global_padding1"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/global_padding7"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text="iphone6"
                style="@style/text_item_first_grade_left" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/global_padding2"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/fetch_date"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:text="7-22"
                    android:singleLine="true"
                    android:ellipsize="end"
                    style="@style/text_item_four_grade"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/global_padding1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="积分:"
                    style="@style/text_item_four_grade" />

                <TextView
                    android:id="@+id/cosume_point"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                   style="@style/text_item_four_grade"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/global_padding8"
            android:orientation="vertical"
            >
            <TextView 
                android:id="@+id/goods_trans_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/global_padding7"
                android:textSize="@dimen/global_font_size3"
                android:textColor="@color/goods_trans_state_text_color"
                android:gravity="right"
                />
           <TextView 
            android:id="@+id/order_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/global_padding7"
            android:textSize="@dimen/global_font_size5"
            android:gravity="bottom"
            android:textColor="@color/cur_point_desc"
            android:text="查看订单详情"
            />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/hor_degree"
        android:background="@color/integral_detail_fengexian" />

</LinearLayout>