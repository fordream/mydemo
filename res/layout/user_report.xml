<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/global_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/set_first_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/common_input_bg_shap"
        android:gravity="top"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/content"
            style="@style/global_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="top|left"
            android:hint="请填写具体举报内容~"
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxLength="200"
            android:minHeight="100dp"
            android:minLines="5"
            android:text=""
            android:textColor="@color/common_input_value_text_color"
            android:textColorHint="@color/common_input_hint_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/num"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:gravity="center|right"
            android:text="200"
            android:textSize="14sp"
            android:textColor="@color/common_input_value_text_color"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:text="请选择举报的标签:"
        android:textColor="@color/item_second_grade_color"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/tag1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_report_tag_uncheck_bg"
            android:text="反动活动"
            android:textColor="@color/report_activity_lable_text_color" />

        <Button
            android:id="@+id/tag2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_report_tag_uncheck_bg"
            android:text="色情活动"
            android:textColor="@color/report_activity_lable_text_color" />

        <Button
            android:id="@+id/tag3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_report_tag_uncheck_bg"
            android:text="非法活动"
            android:textColor="@color/report_activity_lable_text_color" />

        <Button
            android:id="@+id/tag4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_report_tag_uncheck_bg"
            android:text="欺诈活动"
            android:textColor="@color/report_activity_lable_text_color" />
    </LinearLayout>

</LinearLayout>