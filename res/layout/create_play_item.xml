<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/play_nature_name"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_padding8"
             android:textColor="#3a3a3a"
            android:layout_gravity="center|left"
            android:textSize="15sp"
            />
        <LinearLayout 
            android:id="@+id/play_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="@dimen/global_padding8"
            android:layout_weight="1">
            <TextView 
            android:id="@+id/play_nature_values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/global_font_size8"
            android:textColor="#7d7d7d"
            android:singleLine="true"
            />
       		<EditText 
       		    android:id="@+id/play_nature_input"
       		    android:layout_width="wrap_content"
       		    android:layout_height="wrap_content"
       		    android:layout_gravity="center_vertical"
       		    android:textSize="@dimen/global_font_size8"
       		    android:background="@color/white"
            	android:textColor="#7d7d7d"
            	android:singleLine="true"
            	android:visibility="gone"/>
        </LinearLayout>
       <ImageView
           android:id="@+id/skip_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/global_padding7"
            android:layout_marginRight="@dimen/global_padding8"
            android:background="@drawable/common_icon_jt_selector"
            android:visibility="gone"
            android:duplicateParentState="true" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@drawable/common_content_divider_line" />

</LinearLayout>