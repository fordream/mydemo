<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/global_padding3"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/postbar_topic_detail_share_dialog_item_youb"
            android:textColor="@color/dialog_content_text_color"
            android:textSize="@dimen/global_font_size4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/global_controlgap_small"
            android:drawableTop="@drawable/game_share_group_selector"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/postbar_topic_detail_share_dialog_item_youb" />

        <TextView
            android:id="@+id/postbar_topic_detail_share_dialog_item_weibo"
           	android:textColor="@color/dialog_content_text_color"
            android:textSize="@dimen/global_font_size4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/global_controlgap_small"
            android:drawableTop="@drawable/game_share_weibo_selector"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/postbar_topic_detail_share_dialog_item_weibo" />

        <TextView
            android:id="@+id/postbar_topic_detail_share_dialog_item_pengyouquan"
            android:textColor="@color/dialog_content_text_color"
            android:textSize="@dimen/global_font_size4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/global_controlgap_small"
            android:drawableTop="@drawable/game_share_pengyouquan_selector"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/postbar_topic_detail_share_dialog_item_pengyouquan" />

        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/global_padding9"
        android:layout_marginTop="@dimen/global_padding3"
        android:gravity="center"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/postbar_topic_detail_share_dialog_item_weixin"
            android:textColor="@color/dialog_content_text_color"
            android:textSize="@dimen/global_font_size4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/global_controlgap_small"
            android:drawableTop="@drawable/game_share_weixin_selector"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/postbar_topic_detail_share_dialog_item_weixin" />

        <TextView
            android:id="@+id/postbar_topic_detail_share_dialog_item_qqzone"
            android:textColor="@color/dialog_content_text_color"
            android:textSize="@dimen/global_font_size4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/global_controlgap_small"
            android:drawableTop="@drawable/game_share_qzone_selector"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/postbar_topic_detail_share_dialog_item_qqzone" />

        <TextView
            android:id="@+id/postbar_topic_detail_share_dialog_item_tencentweibo"
            android:textColor="@color/dialog_content_text_color"
            android:textSize="@dimen/global_font_size4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/global_controlgap_small"
            android:drawableTop="@drawable/game_share_tweibo_selector"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/postbar_topic_detail_share_dialog_item_tencentweibo" />
    </LinearLayout>
    
    
</LinearLayout>