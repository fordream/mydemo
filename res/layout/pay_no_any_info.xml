<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/user_role_background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/no_pay_info_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="65dp"
        android:layout_marginRight="65dp"
        android:layout_marginTop="65dp"
        android:gravity="center"
        android:text="当前还没有任何U币明细记录哦，加油吧！"
        android:textColor="@color/global_color7"
        android:textSize="@dimen/global_font_size4" />
    <TextView android:id="@+id/no_game_role"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/no_role_tip"
        android:textSize="@dimen/global_font_size8"
        android:textColor="@color/no_user_role_info"
        android:visibility="gone"/>

</LinearLayout>