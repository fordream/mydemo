<com.iwgame.msgs.module.pay.ui.view.PayItemRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:background="@drawable/pay_payitem_bg_shap" >

    <TextView
        android:id="@+id/rmb_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/global_padding1"
        android:layout_marginTop="@dimen/global_padding7"
        android:text="0"
        android:textColor="@color/pay_main_ubselect_item_num_txt"
        android:textSize="@dimen/global_font_size2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rmb_txt"
        android:layout_toRightOf="@+id/rmb_txt"
        android:text="元"
        android:textColor="@color/pay_main_ubselect_item_yuan_txt"
        android:textSize="@dimen/global_font_size4" />

    <TextView
        android:id="@+id/ub_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rmb_txt"
        android:layout_marginLeft="@dimen/global_padding1"
        android:layout_marginTop="4dp"
        android:text="(0U币)"
        android:textColor="@color/pay_main_ubselect_item_num_desc_txt"
        android:textSize="@dimen/global_font_size5" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/ub_txt" />

    <ImageView
        android:id="@+id/act_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/pay_main_act_icon"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/firstpay_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/pay_main_firstpay_icon"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rmb_txt" >

        <TextView
            android:id="@+id/give_ub_txt"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignBaseline="@+id/ub_txt"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/rmb_txt"
            android:layout_marginRight="12dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/pay_payitem_giveub_bg_shap"
            android:gravity="center_vertical"
            android:paddingBottom=".5dp"
            android:paddingLeft="3dp"
            android:paddingRight="12dp"
            android:paddingTop=".5dp"
            android:text="0U币"
            android:textColor="@color/pay_main_ubselect_item_give_txt"
            android:textSize="@dimen/global_font_size5"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/give_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:background="@drawable/pay_main_give_icon"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/rmb_other_txt"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:background="@drawable/pay_payitem_bg_shap"
        android:gravity="center"
        android:text="其他金额"
        android:textColor="@color/pay_main_ubselect_item_other_txt"
        android:textSize="@dimen/global_font_size8"
        android:visibility="gone" />

</com.iwgame.msgs.module.pay.ui.view.PayItemRelativeLayout>