<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:background="#ededed" >
    
     <LinearLayout  
         android:layout_width="fill_parent"  
         android:layout_height="fill_parent"  
         android:orientation="vertical" 
         android:layout_marginBottom="5dp" 
         android:layout_weight="1.0">  
    
    <ScrollView   
         android:id="@+id/role_data_info"
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content"  
        android:fillViewport="true"  
        android:orientation="vertical"  
        android:scrollbars="vertical"
        android:visibility="gone"
       	>  
    
     <LinearLayout
         android:id="@+id/add_role_content"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/global_padding5"
           android:layout_marginBottom="10dp"
           android:orientation="vertical" >
      
           				
	</LinearLayout>
	  </ScrollView>
	  <TextView 
           android:id="@+id/no_role_info"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="没有添加游戏角色数据信息！"
           android:layout_marginTop="200dp"
           android:layout_gravity="center_horizontal"
           android:textSize="@dimen/global_font_size8"
       	   android:textColor="@color/no_user_role_info"/>
	  </LinearLayout>
	
	<Button
	    android:id="@+id/compelte_role"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_marginBottom="@dimen/global_padding9"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:background="@drawable/add_game_role_btn_selector"
	    android:text="完成"
	    android:textColor="#ffffff"
	    android:textSize="@dimen/global_font_size9" />

</LinearLayout>