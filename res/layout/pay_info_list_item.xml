<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:iwgame="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@color/white" >
    <com.iwgame.msgs.widget.roundedimageview.RoundedImageView
        android:id="@+id/pay_image"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/global_padding3"
        android:src="@drawable/account_bundphone_avatar_bg_pre"
        android:scaleType="centerCrop"
        iwgame:border_color="@color/global_color1"
        iwgame:border_width="0dp"
        iwgame:corner_radius="10dp"
        iwgame:oval="false"
        /> 
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_marginTop="@dimen/global_padding3"
	    android:layout_marginLeft="6dp"
	    android:layout_weight="1">
	    <TextView 
	        android:id="@+id/pay_item_title"
	        android:layout_width="180dp"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:text="支付宝充值1434345元"
	        android:textSize="@dimen/global_font_size8"
	        android:textColor="@color/pay_detail_main_title"
	        />
	    <TextView 
	        android:id="@+id/pay_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="#9e9e9e"
	        android:layout_marginTop="5dp"
	        android:textSize="@dimen/global_font_size4"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginRight="10dp"
	    android:orientation="vertical">
	    <TextView 
	        android:id="@+id/pay_money"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/global_font_size2"
	        android:textColor="@color/pay_detail_main_title"
	        android:layout_marginTop="@dimen/global_padding7"/>

	    <TextView
	        android:id="@+id/pay_status"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:gravity="right"
	        android:textColor="@color/pay_detail_status_color"
	        android:layout_gravity="right"
	        android:textSize="@dimen/global_font_size4" />

"
	
	</LinearLayout>
</LinearLayout>