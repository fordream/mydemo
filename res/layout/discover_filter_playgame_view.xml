<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filterView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/discover_filter_content_bg_color1"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/point_detail_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/playgame_filter_gameTxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/discover_filter_tab_bg_text"
            android:drawableRight="@drawable/score_down"
            android:gravity="center"
            android:paddingLeft="@dimen/global_padding2"
            android:paddingRight="@dimen/global_padding2"
            android:singleLine="true"
            android:text="游戏"
            android:textColor="@color/discover_filter_item_txt_text"
            android:textSize="@dimen/global_font_size3" />

        <RelativeLayout
            android:id="@+id/playgame_filter_gameLevelTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <View
                android:id="@+id/gameLevelLine"
                android:layout_width="@dimen/hor_degree"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/global_padding1"
                android:layout_marginTop="@dimen/global_padding1"
                android:background="@color/integral_detail_fengexian" />

            <TextView
                android:id="@+id/playgame_filter_gameLevelTxt"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/gameLevelLine"
                android:background="@color/discover_filter_tab_bg_text"
                android:drawableRight="@drawable/score_down"
                android:gravity="center"
                android:paddingLeft="@dimen/global_padding2"
                android:paddingRight="@dimen/global_padding2"
                android:singleLine="true"
                android:text="默认"
                android:textColor="@color/discover_filter_item_txt_text"
                android:textSize="@dimen/global_font_size3" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/playgame_filter_intelligentTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <View
                android:id="@+id/intelligentline"
                android:layout_width="@dimen/hor_degree"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/global_padding1"
                android:layout_marginTop="@dimen/global_padding1"
                android:background="@color/integral_detail_fengexian" />

            <TextView
                android:id="@+id/playgame_filter_intelligentTxt"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/intelligentline"
                android:background="@color/discover_filter_tab_bg_text"
                android:drawableRight="@drawable/score_down"
                android:gravity="center"
                android:paddingLeft="@dimen/global_padding2"
                android:paddingRight="@dimen/global_padding2"
                android:singleLine="true"
                android:text="默认排序"
                android:textColor="@color/discover_filter_item_txt_text"
                android:textSize="@dimen/global_font_size3" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/playgame_filter_sexTab"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <View
                android:id="@+id/sexline"
                android:layout_width="@dimen/hor_degree"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/global_padding1"
                android:layout_marginTop="@dimen/global_padding1"
                android:background="@color/integral_detail_fengexian" />

            <TextView
                android:id="@+id/playgame_filter_sexTxt"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/sexline"
                android:background="@color/discover_filter_tab_bg_text"
                android:drawableRight="@drawable/score_down"
                android:gravity="center"
                android:paddingLeft="@dimen/global_padding2"
                android:paddingRight="@dimen/global_padding2"
                android:singleLine="true"
                android:text="筛选"
                android:textColor="@color/discover_filter_item_txt_text"
                android:textSize="@dimen/global_font_size3" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/discover_filter_div_color" />

    <LinearLayout
        android:id="@+id/filterListContent"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical" />

</LinearLayout>