<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:background="@color/grade_first_line_bg_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
     <LinearLayout 
	    android:layout_width="4dp"
	    android:layout_height="match_parent"
	    android:background="@color/task_list_color_tiao"></LinearLayout>
        <TextView
            android:id="@+id/new_hand_task_title_description"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/global_list_item_height_small"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/global_padding8"
            android:gravity="center_vertical"
            android:text="@string/new_hand_task"
            android:textColor="@color/set_item_name_text_color"
            android:textSize="@dimen/global_font_size3" />
        
        <LinearLayout
            android:id="@+id/new_hand_task_img"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:gravity="right"
	        android:layout_marginRight="@dimen/global_padding8"
	        android:orientation="horizontal" >
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="@dimen/global_padding8"
	            android:src="@drawable/tasklist_jifen_pre" />
	        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="@dimen/global_padding1"
	            android:gravity="center_vertical"
	            android:text="积分"
	            android:textColor="@color/task_item_font_color"
	            android:textSize="@dimen/global_font_size4" />
	        
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="@dimen/global_padding3"
	            android:src="@drawable/tasklist_exp_pre" />
	        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	             android:layout_gravity="center_vertical"
	            android:layout_marginLeft="@dimen/global_padding1"
	            android:text="经验值"
	            android:textColor="@color/task_item_font_color"
	            android:textSize="@dimen/global_font_size4" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_width"
        android:background="@drawable/common_content_divider_line" />

</LinearLayout>