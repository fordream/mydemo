<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:iwgame="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <com.iwgame.msgs.widget.roundedimageview.RoundedImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/global_icon2"
        android:layout_height="@dimen/global_icon2"
        android:scaleType="centerCrop"
        android:src="@drawable/common_default_icon"
        iwgame:border_color="@color/global_color1"
        iwgame:border_width="0dp"
        iwgame:corner_radius="8dp"
        iwgame:oval="false" />

    <ImageView
        android:id="@+id/tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/icon"
        android:layout_alignRight="@id/icon"
        android:background="@drawable/common_select_pressed"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="@dimen/global_icon2"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/global_icon2"
        android:gravity="center"
        android:singleLine="true"
        android:text="好友数:0"
        android:textColor="@color/global_color19"
        android:textSize="@dimen/global_font_size5" />

</RelativeLayout>