<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/set_first_bg"
    android:orientation="vertical" >

    <LinearLayout 
        android:id="@+id/loading_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        ></LinearLayout>
    
    <LinearLayout
        android:id="@+id/content_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/global_padding9"
        android:background="@drawable/common_set_bg_shap"
        android:orientation="vertical"
        android:padding=".5dp" 
        >

        <LinearLayout
            android:id="@+id/msgArea"
            android:layout_width="match_parent"
            android:layout_height="@dimen/global_list_item_height_small"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/msgItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/global_padding8"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="公会消息提醒"
                    android:textColor="@color/set_item_name_text_color"
                    android:textSize="@dimen/global_font_size2" />

                <Button
                    android:id="@+id/msgOffOn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginLeft="@dimen/global_padding3"
                    android:layout_marginRight="@dimen/global_padding8"
                    android:background="@drawable/group_verify_checkbox_pressed" />
            </LinearLayout>
        </LinearLayout>
       
        <LinearLayout
            android:id="@+id/verifyArea"
            android:layout_width="match_parent"
            android:layout_height="@dimen/global_list_item_height_small"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/verifyItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/global_padding8"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="加入公会成员验证"
                    android:textColor="@color/set_item_name_text_color"
                    android:textSize="@dimen/global_font_size2" />

                <Button
                    android:id="@+id/verifyOffOn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginLeft="@dimen/global_padding3"
                    android:layout_marginRight="@dimen/global_padding8"
                    android:background="@drawable/group_verify_checkbox_pressed" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>