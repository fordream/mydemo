<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
      <RelativeLayout
               android:id="@+id/system_item"
               android:layout_width="match_parent"
               android:layout_height="@dimen/global_list_item_height_medium2"
               android:background="@drawable/common_item_top_selector"
                       >
                        <TextView
                            android:id="@+id/user_item_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/global_padding9"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="请选择服务器"
                            android:textColor="@color/set_item_name_text_color"
                            android:textSize="@dimen/global_font_size2" />



                        <ImageView
                            android:id="@+id/user_item_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/global_padding7"
                            android:layout_marginRight="@dimen/global_padding8"
                            android:background="@drawable/common_icon_jt_selector"
                            android:duplicateParentState="true" />
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="@drawable/user_role_divider_line" />
                    

</LinearLayout>