<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/global_padding3"
    android:paddingRight="@dimen/global_padding3" >

    <LinearLayout
        android:id="@+id/dialogContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/common_dialog_2_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/global_dialog_title_height"
            android:layout_marginLeft="@dimen/global_padding3"
            android:layout_marginRight="@dimen/global_padding3"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="请输入邀请理由"
            android:textColor="@color/dialog_title_text_color"
            android:textSize="@dimen/global_font_size1" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/global_padding3"
            android:layout_marginRight="@dimen/global_padding3"
            android:gravity="center"
            android:background="@drawable/edittext_bg"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/edit_group_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/global_padding3"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:paddingRight="@dimen/global_padding2"
                android:paddingTop="@dimen/global_padding8"
                android:paddingBottom="@dimen/global_padding8"
                android:textColor="@color/common_input_value_text_color"
                android:textColorHint="@color/common_input_hint_text_color" />

            <Button
                android:id="@+id/act_login_cleanAccountBtn"
                android:layout_width="@dimen/global_clean_size"
                android:layout_height="@dimen/global_clean_size"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="@dimen/global_padding3"
                android:layout_marginRight="@dimen/global_padding8"
                android:background="@drawable/common_close_bg"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/edit_word_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_padding3"
            android:layout_marginRight="@dimen/global_padding3"
            android:gravity="right"
            android:textColor="@color/common_input_value_text_color"
            android:textSize="@dimen/global_font_size2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/global_dialog_bottom_height"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/group_card_line_color" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cannelBtn"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/common_dialog_btn_selector"
                android:text="@string/global_cannel"
                android:textColor="@color/dialog_cancel_btn_text_color"
                android:textSize="@dimen/global_font_size2" />

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:background="@color/group_card_line_color" />

            <Button
                android:id="@+id/commitBtn"
                android:textSize="@dimen/global_font_size2"
                android:textColor="@color/dialog_commit_btn_text_color"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/common_dialog_btn_selector"
                android:text="@string/global_ok" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>