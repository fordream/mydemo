<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:iwgame="http://schemas.android.com/apk/res-auto"
    style="@style/global_list_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg_selector" >

    <com.iwgame.msgs.widget.roundedimageview.RoundedImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/global_icon_1"
        android:layout_height="@dimen/global_icon_1"
        android:scaleType="centerCrop"
        android:src="@drawable/common_default_icon"
        iwgame:border_color="@color/global_color1"
        iwgame:border_width="0dp"
        iwgame:corner_radius="10dp"
        iwgame:oval="false" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/global_padding1"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center|left" >

            <ImageView
                android:id="@+id/topVeiw"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="5dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/gamename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="left"
                style="@style/text_item_first_grade_left" />
        </LinearLayout>

        <TextView
            android:id="@+id/desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            style="@style/text_item_second_grade" />

        <TextView
            android:id="@+id/desc3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
			style="@style/text_item_third_grade"
            android:visibility="gone" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/hotArea"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/global_icon_1"
            android:layout_gravity="center|right"
            android:background="@drawable/common_btn_nor_shap" />

        <LinearLayout
            android:id="@+id/rightView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right|center"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/distanceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_marginBottom="3dp" >

                <ImageView
                    android:id="@+id/tag"
                    android:layout_width="@dimen/global_list_tag_width"
                    android:layout_height="@dimen/global_list_tag_height"
                    android:layout_gravity="right"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/rdesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:textColor="@color/global_color7"
                    android:textSize="@dimen/global_font_size3" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/functionBtn"
                    android:layout_width="66dp"
                    android:layout_height="29dp"
                    android:background="@drawable/common_btn_selector_other" />

                <TextView
                    android:id="@+id/functionTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/follow_textview_text_color"
                    android:textSize="@dimen/global_font_size8" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>