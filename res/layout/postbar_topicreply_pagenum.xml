<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/list_item_bg_nor"
        android:orientation="vertical"
        android:paddingBottom="@dimen/global_padding2"
        android:paddingLeft="@dimen/global_padding3"
        android:paddingRight="@dimen/global_padding3"
        android:paddingTop="@dimen/global_padding2" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/common_page_bg"
                android:gravity="center"
                android:orientation="vertical" >

                <Gallery
                    android:id="@+id/postbar_topicreply_pages_gallery"
                    android:layout_width="@dimen/global_pagenum_gallery_width"
                    android:layout_height="wrap_content"
                    android:spacing="1dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/postbar_topicreply_pages_current_page"
                android:textSize="@dimen/global_font_size3"
                android:textColor="@color/topic_reply_pages_current_page_color"
                android:layout_width="@dimen/global_padding5"
                android:layout_height="@dimen/global_padding4"
                android:layout_gravity="center"
                android:background="@drawable/pagenum_current_page_shap"
                android:gravity="center" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/global_padding2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/postbar_topicreply_current_pagenum"
                android:textSize="@dimen/global_font_size5"
                android:textColor="@color/topic_reply_current_pagenum_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/global_padding1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/cannel"
                style="@style/text_size8_color4_default"
                android:layout_width="@dimen/global_follow_button_width"
                android:layout_height="@dimen/global_follow_button_height"
                android:background="@drawable/common_btn_noclick_bg_shap"
                android:gravity="center"
                android:text="@string/global_cannel" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/ok"
                android:textColor="@color/common_btn_text_color"
                android:layout_width="@dimen/global_follow_button_width"
                android:layout_height="@dimen/global_follow_button_height"
                android:background="@drawable/common_btn_selector"
                android:textSize="@dimen/global_font_size8"
                android:gravity="center"
                android:text="@string/global_ok" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>