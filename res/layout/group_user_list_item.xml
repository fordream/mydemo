<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg_selector"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/global_padding1"
        android:layout_marginLeft="@dimen/global_padding1"
        android:layout_marginTop="@dimen/global_padding1"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="@dimen/global_icon_1"
            android:layout_height="@dimen/global_icon_1" >

            <include layout="@layout/common_icon_big_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_padding1"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/nickname"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:textColor="@color/item_first_grade_left_color"
                android:textSize="@dimen/global_font_size2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:background="@drawable/common_item_jh_shap"
                    android:drawableLeft="@drawable/user_man_icon"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/global_font_size7" />

                <TextView
                    android:id="@+id/grade"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_marginLeft="@dimen/global_padding1"
                    android:background="@drawable/common_item_vip_bg_shap"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:singleLine="true"
                    android:text="VIP0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/global_font_size7" />

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textColor="@color/item_second_grade_color"
                    android:textSize="@dimen/global_font_size3"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/newtag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_dong"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/newsTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/global_padding1"
                    android:singleLine="true"
                    android:textColor="@color/item_third_grade_color"
                    android:textSize="@dimen/global_font_size3" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/hotArea"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|right"
            android:alpha="0"
            android:background="@drawable/common_btn_nor_shap" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/global_padding1"
            android:layout_marginRight="@dimen/global_padding1"
            android:layout_marginTop="@dimen/global_padding1" >

            <ImageView
                android:id="@+id/tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right" />

            <FrameLayout
                android:id="@+id/functionView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:visibility="invisible" >

                <ImageView
                    android:id="@+id/submitBtn"
                    android:layout_width="66dp"
                    android:layout_height="29dp"
                    android:background="@drawable/common_btn_selector" />

                <TextView
                    android:id="@+id/submitTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/common_btn_text_color"
                    android:textSize="@dimen/global_font_size8" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/functionView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:gravity="right"
                android:orientation="vertical"
                android:visibility="invisible" />
        </FrameLayout>
    </FrameLayout>

</LinearLayout>