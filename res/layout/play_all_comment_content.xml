     <ImageView 
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@drawable/common_content_divider_line"/>
    <LinearLayout 
        android:id="@+id/remark_contentView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
