<?xml version="1.0" encoding="utf-8"?>
<com.iwgame.msgs.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/img_grid_cell_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
 
    <ImageView
        android:id="@+id/img_grid_item"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/image_select_load_fail_img_bg"
        android:scaleType="centerCrop" />

    <ImageButton
        android:id="@+id/check_img"
        android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@null"
        android:src="@drawable/common_image_select_pre" />

</com.iwgame.msgs.widget.SquareLayout>