<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
                        android:id="@+id/role_item"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/global_list_item_height_medium2"
                        android:background="@drawable/common_item_top_selector"
                         >
                        <EditText
                            android:id="@+id/user_role_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/global_padding9"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:hint="输入角色名"
                            android:background="@color/white"
                            android:textColor="@color/set_item_name_text_color"
                            android:textSize="@dimen/global_font_size2" />
                        </RelativeLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height=".5dp"
                        android:background="@drawable/user_role_divider_line" />

</LinearLayout>