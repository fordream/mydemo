<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/discover_filter_item_bg_text"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="@dimen/global_padding8"
        android:background="@drawable/common_default_icon"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/global_padding8"
        android:layout_marginRight="@dimen/global_padding8"
        android:layout_weight="1"
        android:singleLine="true"
        android:textColor="@color/discover_filter_item_txt_text"
        android:textSize="@dimen/global_font_size2" />

    <ImageView
        android:id="@+id/tick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/global_padding8"
        android:background="@drawable/common_checkbox_nor" />

</LinearLayout>