<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/set_first_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/global_padding1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/global_icon_1"
            android:layout_height="@dimen/global_icon_1"
            android:layout_marginBottom="@dimen/global_padding1"
            android:scaleType="centerCrop"
            android:src="@drawable/common_default_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/contribute_integral_people_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/global_padding3"
                android:layout_marginTop="@dimen/global_padding8"
                android:gravity="center_vertical"
                style="@style/text_item_first_grade_left"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/global_padding3"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/global_padding8"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/contribute_integral_age"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:background="@drawable/common_item_jh_shap"
                    android:drawableLeft="@drawable/user_man_icon"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/global_font_size7" />

                <TextView
                    android:id="@+id/contri_descri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/global_padding2"
                    android:text="贡献的总积分："
                    style="@style/text_item_second_grade"/>

                <TextView
                    android:id="@+id/contribute_point_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/contri_descri"
                    android:layout_toRightOf="@id/contri_descri"
                    android:gravity="center"
                    style="@style/text_item_second_grade"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/contribute_integral_rank_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/global_padding8"
            android:visibility="gone" />

        <TextView
            android:id="@+id/rank_id"
            android:layout_width="@dimen/shape_item_width"
            android:layout_height="@dimen/shape_item_height"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/global_padding8"
            android:background="@drawable/rank_shape"
            android:gravity="center"
            android:textColor="@color/progress_grade_color"
            android:textSize="@dimen/global_font_size3" />
    </LinearLayout>

    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/hor_degree"
        android:background="@drawable/common_content_divider_line"
        />
</LinearLayout>