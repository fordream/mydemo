<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:iwgame="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:background="@drawable/game_topgame_item_bg_selector" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/global_padding7"
        android:layout_marginLeft="@dimen/global_padding7"
        android:layout_marginRight="@dimen/global_padding7"
        android:layout_marginTop="@dimen/global_padding7" >

        <com.iwgame.msgs.widget.roundedimageview.RoundedImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/global_icon8"
            android:layout_height="@dimen/global_icon8"
            android:scaleType="centerCrop"
            iwgame:border_color="@color/global_color1"
            iwgame:border_width="0dp"
            iwgame:corner_radius="10dp"
            iwgame:oval="false"
             android:layout_alignParentLeft="true"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/topview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/icon"
            android:layout_marginLeft="@dimen/global_padding1"
       
            android:layout_toRightOf="@+id/icon" />

        <TextView
            android:id="@+id/gamename"
            style="@style/text_item_first_grade_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btn_follow"
            android:layout_toRightOf="@+id/topview"
            android:includeFontPadding="false"
            android:singleLine="true" />

        <TextView
            android:id="@+id/desc_info"
            style="@style/text_size3_color3_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/topview"
            android:layout_below="@+id/gamename"
            android:layout_marginTop="@dimen/global_padding1"
            android:layout_toLeftOf="@+id/btn_follow"
            android:singleLine="true"
            android:includeFontPadding="false" />
 
         <TextView
            android:id="@+id/desc_info2"
            style="@style/text_size3_color3_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/topview"
            android:layout_below="@+id/desc_info"
            android:layout_marginTop="@dimen/global_padding1"
            android:layout_toLeftOf="@+id/btn_follow"
            android:text="你好"
            android:singleLine="true"
            android:includeFontPadding="false"
             />
  
        <Button
            android:id="@+id/btn_follow"
            style="@style/text_size8_color18_default"
            android:layout_width="@dimen/global_follow_button_width"
            android:layout_height="@dimen/global_follow_button_height"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/common_btn_selector_other"
            android:gravity="center" />
    </RelativeLayout>

    <View
        android:id="@+id/topic_title_fgx"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/global_color5" />

    <LinearLayout
        android:id="@+id/topic_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/global_padding7"
            android:src="@drawable/game_detail_post" />

        <TextView
            android:id="@+id/topic_title"
            style="@style/text_size8_color3_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_padding1"
            android:paddingBottom="@dimen/global_padding2"
            android:paddingRight="@dimen/global_padding7"
            android:paddingTop="@dimen/global_padding2" />
    </LinearLayout>
