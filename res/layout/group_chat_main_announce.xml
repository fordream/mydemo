<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/global_padding4"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/group_chat_main_announce"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/group_chat_main_announce_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/mchat_announce_bg_color"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/global_padding2"
                    android:layout_marginTop="@dimen/global_padding3"
                    android:src="@drawable/chat_group_announce_gb" />

                <TextView
                    android:id="@+id/group_chat_main_announce_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/global_padding3"
                    android:layout_marginLeft="@dimen/global_padding7"
                    android:layout_marginRight="@dimen/global_padding11"
                    android:layout_marginTop="@dimen/global_padding3"
                    android:textColor="@color/mchat_announce_text_color"
                    android:textSize="@dimen/global_font_size8" />
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/group_chat_main_announce_action_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/group_chat_main_announce_content"
            android:layout_marginRight="@dimen/global_padding2"
            android:background="@null"
            android:layout_marginTop="@dimen/global_padding3"
            android:focusable="false"
            android:src="@drawable/group_chat_main_announce_close_selector" />
    </RelativeLayout>

</LinearLayout>