<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:iwgame="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/me_image_bg"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/global_top_height" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/leftBtn"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_gravity="left" 
                android:background="@drawable/user_detail_back"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text="ID:"
                android:textColor="@color/set_detail_text_color"
                android:textSize="@dimen/text_large" />

            <TextView
                android:id="@+id/serial"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/set_detail_text_color"
                android:textSize="@dimen/text_large" />
        </LinearLayout>

        <com.iwgame.msgs.widget.TitleTextView
            android:id="@+id/titleTxt"
            style="@style/text_large_white_default"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:shadowColor="@color/common_shadow_color"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:singleLine="true" />

        <LinearLayout
            android:id="@+id/rightView"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/share"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:background="@drawable/common_share_btn" />

            <Button
                android:id="@+id/rightMenu"
                android:layout_width="57dp"
                android:layout_height="match_parent"
                android:background="@drawable/user_detail_info_right_top" />
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.iwgame.msgs.widget.CircleImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/global_icon1"
                android:layout_height="@dimen/global_icon1"
                android:layout_marginTop="3dp"
                android:padding="2dp"
                android:src="@drawable/common_user_icon_default"
                iwgame:border_color_c="@color/icon_miaobian"
                iwgame:border_width_c="2dp" />

            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/global_padding8"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:maxLength="16"
                android:singleLine="true"
                android:textColor="@color/set_detail_text_color"
                android:textSize="@dimen/global_font_size1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/global_padding2"
                android:background="@android:color/transparent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    android:textColor="@color/set_detail_text_color"
                    android:textSize="@dimen/global_font_size3" />

                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/global_padding2"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    android:textColor="@color/set_detail_text_color"
                    android:textSize="@dimen/global_font_size3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/global_padding2"
                android:background="@android:color/transparent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/grade_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/frend_level_bg"
                    android:drawableLeft="@drawable/frend_image_level"
                    android:paddingLeft="15dp"
                    android:text="Lv1"
                    android:gravity="center"
                    android:textColor="@color/set_detail_text_color"
                    android:textSize="@dimen/global_font_size3" />

                <TextView
                    android:id="@+id/point_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/global_padding2"
                    android:background="@drawable/frend_level_bg"
                    android:drawableLeft="@drawable/frend_image_integral"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:textColor="@color/set_detail_text_color"
                    android:textSize="@dimen/global_font_size3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/global_padding2"
                android:background="@color/set_setting_item_bg"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/post_item"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/post_pic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/setting_main_post_label" />

                        <TextView
                            android:id="@+id/post_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/post_pic"
                            android:text="帖子"
                            android:textColor="@color/other_user_detail_follow_fans_group_text_color"
                            android:textSize="@dimen/global_font_size3" />

                        <TextView
                            android:id="@+id/post_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/post_title"
                            android:layout_below="@id/post_title"
                            android:text="0"
                            android:textColor="@color/cue_words_text_color"
                            android:textSize="@dimen/global_font_size6" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/game_item"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/game_pic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/setting_tab_postbar" />

                        <TextView
                            android:id="@+id/game_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/game_pic"
                            android:text="贴吧"
                            android:textColor="@color/other_user_detail_follow_fans_group_text_color"
                            android:textSize="@dimen/global_font_size3" />

                        <TextView
                            android:id="@+id/game_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/game_title"
                            android:layout_below="@id/game_title"
                            android:text="0"
                            android:textColor="@color/cue_words_text_color"
                            android:textSize="@dimen/global_font_size6" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/group_item"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/group_pic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/setting_tab_group" />

                        <TextView
                            android:id="@+id/group_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/group_pic"
                            android:text="公会"
                            android:textColor="@color/other_user_detail_follow_fans_group_text_color"
                            android:textSize="@dimen/global_font_size3" />

                        <TextView
                            android:id="@+id/group_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/group_title"
                            android:layout_below="@id/group_title"
                            android:text="0"
                            android:textColor="@color/cue_words_text_color"
                            android:textSize="@dimen/global_font_size6" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/follow_item"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/follow_pic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/setting_tab_guanzhu" />

                        <TextView
                            android:id="@+id/follow_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/follow_pic"
                            android:text="关注"
                            android:textColor="@color/other_user_detail_follow_fans_group_text_color"
                            android:textSize="@dimen/global_font_size3" />

                        <TextView
                            android:id="@+id/follow_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/follow_title"
                            android:layout_below="@id/follow_title"
                            android:text="0"
                            android:textColor="@color/cue_words_text_color"
                            android:textSize="@dimen/global_font_size6" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/fans_item"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/fans_pic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/setting_tab_fans" />

                        <TextView
                            android:id="@+id/fans_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@id/fans_pic"
                            android:text="粉丝"
                            android:textColor="@color/other_user_detail_follow_fans_group_text_color"
                            android:textSize="@dimen/global_font_size3" />

                        <TextView
                            android:id="@+id/fans_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/fans_title"
                            android:layout_below="@id/fans_title"
                            android:text="0"
                            android:textColor="@color/cue_words_text_color"
                            android:textSize="@dimen/global_font_size6" />
                    </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/no_ablum_fengexian"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@drawable/common_content_divider_line"
                    android:visibility="visible" />

                <HorizontalScrollView
                    android:id="@+id/detailInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/global_padding8"
                    android:layout_marginRight="@dimen/global_padding8"
                    android:scrollbars="none"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="98dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/addpotoBtn"
                            android:layout_width="@dimen/global_icon8"
                            android:layout_height="@dimen/global_icon8"
                            android:src="@drawable/user_setting_add_photo_selector"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/photoContentView"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/global_icon8"
                            android:layout_marginRight="@dimen/global_page_paddingright"
                            android:orientation="horizontal" >
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/tip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/global_font_size4"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/global_list_item_height_small"
                    android:background="@drawable/common_setting_item_bg_shap"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/global_padding8"
                        android:drawableLeft="@drawable/setting_qianming_card_label"
                        android:drawablePadding="@dimen/global_padding3"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="签名"
                        android:textColor="@color/set_item_name_text_color"
                        android:textSize="@dimen/global_font_size2" />

                    <TextView
                        android:id="@+id/mood"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="42dp"
                        android:layout_marginRight="@dimen/global_padding8"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:textColor="@color/group_detail_notice_color1"
                        android:textSize="@dimen/global_font_size3"
                        android:visibility="visible" />
                </LinearLayout>
				
                <LinearLayout 
                    android:id="@+id/user_play"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout 
                        android:id="@+id/user_play_item"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/global_list_item_height_small"
                    	android:background="@drawable/common_setting_item_bg_shap1"
                        android:orientation="horizontal">
                        <LinearLayout 
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1">
                            <ImageView 
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="@dimen/global_padding8"
                               android:background="@drawable/setting_main_peiwan_label"/>
                            <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/global_padding3"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="游戏陪玩"
                            android:textColor="@color/set_item_name_text_color"
                            android:textSize="@dimen/global_font_size2" />
                        </LinearLayout>
                         <LinearLayout 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:layout_gravity="center_vertical"
                       android:layout_weight="1">
                    <ImageView 
                        android:id="@+id/check_more_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="@dimen/global_padding8"
                         android:background="@drawable/common_icon_jt_selector"/>
                    </LinearLayout>
                    </LinearLayout>
                     <LinearLayout 
                        android:id="@+id/other_user_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/global_padding18"
                        android:orientation="vertical"/>
                </LinearLayout>
                 <ImageView
                    android:id="@+id/play_Line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@drawable/common_content_divider_line"
                     />
                <LinearLayout
                    android:id="@+id/other_game_role"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                <LinearLayout
                    android:id="@+id/other_role_item"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/global_list_item_height_small"
                    android:background="@drawable/common_setting_item_bg_shap1"
                    android:orientation="horizontal"
                   >
					<LinearLayout 
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_gravity="center_vertical"
					   android:orientation="horizontal"
					   android:layout_weight="1" >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="@dimen/global_padding8"
                        android:background="@drawable/setting_main_juese_label" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/global_padding3"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="游戏角色"
                        android:textColor="@color/set_item_name_text_color"
                        android:textSize="@dimen/global_font_size2" />
                   </LinearLayout>
                   <LinearLayout 
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:layout_gravity="center_vertical"
                       android:layout_weight="1">
                    <ImageView 
                        android:id="@+id/check_more_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="@dimen/global_padding8"
                         android:background="@drawable/common_icon_jt_selector"/>
                    </LinearLayout>
                     </LinearLayout>

                    <LinearLayout 
                        android:id="@+id/other_user_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/global_padding18"
                        android:orientation="vertical">
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/role_Line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@drawable/common_content_divider_line"
                     />
                <LinearLayout
                    android:id="@+id/my_group_card"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/global_list_item_height_small"
                    android:background="@drawable/common_setting_item_bg_shap1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/global_padding8"
                        android:background="@drawable/setting_main_group_card_label" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/global_padding3"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="公会名片"
                        android:textColor="@color/set_item_name_text_color"
                        android:textSize="@dimen/global_font_size2" />

                    <TextView
                        android:id="@+id/group_card"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/global_padding3"
                        android:layout_marginRight="@dimen/global_padding8"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:singleLine="true"
                        android:textColor="@color/group_detail_notice_color1"
                        android:textSize="@dimen/global_font_size2"
                        android:visibility="visible" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/group_card_fengexian"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@drawable/common_content_divider_line"
                    android:visibility="gone"                    
                     />
                <LinearLayout
                    android:id="@+id/setting_item"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/global_list_item_height_small"
                    android:background="@drawable/common_setting_item_bg_shap1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/global_padding8"
                        android:background="@drawable/setting_main_time_label" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/global_padding3"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="游戏时长"
                        android:textColor="@color/set_item_name_text_color"
                        android:textSize="@dimen/global_font_size2" />

                    <TextView
                        android:id="@+id/game_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/global_padding3"
                        android:layout_marginRight="@dimen/global_padding8"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:singleLine="true"
                        android:textColor="@color/group_detail_notice_color1"
                        android:textSize="@dimen/global_font_size2"
                        android:visibility="visible" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@drawable/common_content_divider_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/common_setting_item_bg_shap1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/grade_item"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/global_list_item_height_small"
                        android:layout_marginLeft="@dimen/global_padding8"
                        android:layout_marginRight="@dimen/global_padding8"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/setting_main_like_label" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/global_padding3"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="钟情游戏"
                            android:textColor="@color/set_item_name_text_color"
                            android:textSize="@dimen/global_font_size2" />

                        <TextView
                            android:id="@+id/love_game"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/global_padding9"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:singleLine="true"
                            android:textColor="@color/group_detail_notice_color1"
                            android:textSize="@dimen/global_font_size2" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@drawable/common_content_divider_line" />

                    <LinearLayout
                        android:id="@+id/point_item"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/global_list_item_height_small"
                        android:background="@drawable/common_setting_item_bg_shap1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/global_padding8"
                            android:background="@drawable/setting_main_job_label" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/global_padding3"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="职业"
                            android:textColor="@color/set_item_name_text_color"
                            android:textSize="@dimen/global_font_size2" />

                        <TextView
                            android:id="@+id/my_job"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/global_padding9"
                            android:layout_marginRight="@dimen/global_padding8"
                            android:layout_weight="1"
                            android:gravity="center|right"
                            android:singleLine="true"
                            android:textColor="@color/group_detail_notice_color1"
                            android:textSize="@dimen/global_font_size2" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@drawable/common_content_divider_line" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >

        <View
            android:layout_width="match_parent"
            android:layout_height=".5dp"
            android:background="@color/user_detail_bottom_fengexian" />

        <LinearLayout
            android:id="@+id/commonBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/talk"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/user_detail_btn_selector"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:drawableLeft="@drawable/user_detail_talk_selector"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="对话"
                    android:textColor="@color/user_detailinfo_bottom_tvcolor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/followBtn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/user_detail_btn_selector"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/followImg"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:textColor="@color/user_detailinfo_bottom_tvcolor" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blacklistBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/user_detail_btn_selector"
                android:duplicateParentState="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/user_detail_black_selector" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
