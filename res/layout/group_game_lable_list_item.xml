<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/global_list_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg_selector" >

    <LinearLayout
        android:layout_width="@dimen/global_icon_4"
        android:layout_height="@dimen/global_icon_4" >

        <include layout="@layout/common_icon_small_white" />
    </LinearLayout>

    <TextView
        android:id="@+id/gamename"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@color/item_second_grade_color"
        android:textSize="@dimen/global_font_size2" />

</LinearLayout>