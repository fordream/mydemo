<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:iwgame="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

       <View android:layout_width="@dimen/global_icon8"
        android:layout_height="4dp"
        android:id="@+id/tmpview"
       android:layout_centerHorizontal="true"
     />
    
    <com.iwgame.msgs.widget.roundedimageview.RoundedImageView
        android:id="@+id/gamelogo"
        android:layout_width="@dimen/global_icon8"
        android:layout_height="@dimen/global_icon8"
        android:layout_centerHorizontal="true"
        
        android:scaleType="centerCrop"
        iwgame:border_color="@color/global_color1"
        iwgame:border_width="0dp"
        iwgame:corner_radius="10dp"
        iwgame:oval="false"
        android:layout_below="@+id/tmpview" />

 	<TextView 
 	    android:id="@+id/game_id"
 	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
 	    />
      
    <TextView
        android:id="@+id/game_topiccount"
        style="@style/text_size5_color1_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/news_count_bg"
        android:gravity="center"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/gamename"
        style="@style/text_size3_color4_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gamelogo"
        android:layout_marginBottom="@dimen/global_padding1"
        android:layout_marginTop="@dimen/global_padding1"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_centerHorizontal="true" 
        />

</RelativeLayout>