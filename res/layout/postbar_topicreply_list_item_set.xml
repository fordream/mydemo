<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/postbar_topicreply_list_item_set_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/global_padding3"
    android:layout_marginRight="@dimen/global_padding3"
    android:layout_marginBottom="@dimen/global_padding2"
    android:orientation="horizontal" >
    
    <ImageView 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:src="@drawable/postbar_jihe"
        />
    
    <TextView
        android:id="@+id/postbar_topicreply_list_item_set_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/topic_reply_set_name_text_color"
        android:textSize="@dimen/global_font_size8"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="@dimen/global_padding7"
        android:background="@drawable/common_set_bg_shap" />
    
</LinearLayout>