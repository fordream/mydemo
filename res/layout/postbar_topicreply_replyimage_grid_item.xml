<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/global_padding9"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/postbar_topicreply_replyimage_grid_item_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="@dimen/global_padding1"
            android:scaleType="centerCrop" >
        </ImageView>

        <ImageView
            android:id="@+id/postbar_topicreply_replyimage_grid_item_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/postbar_topicreply_replyimage_grid_item_image"
            android:layout_alignTop="@+id/postbar_topicreply_replyimage_grid_item_image"
            android:layout_marginRight="-7dp"
            android:layout_marginTop="-7dp"
            android:src="@drawable/postbar_add_pic_close" >
        </ImageView>
    </RelativeLayout>

</LinearLayout>