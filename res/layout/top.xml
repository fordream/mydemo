<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/global_top_height"
    android:background="@color/black"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="horizontal" >

    <com.iwgame.msgs.widget.TitleLinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/leftView"
                android:layout_width="57dp"
                android:layout_height="46dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.iwgame.msgs.widget.BackButton
                    android:id="@+id/leftBtn"
                    android:layout_width="57dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="45dp"
                android:background="#5baee6"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/extendView_left"
            android:layout_width="57dp"
            android:layout_height="46dp"
            android:layout_gravity="center|right"
            android:orientation="horizontal"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/center"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.iwgame.msgs.widget.TitleTextView
                android:id="@+id/titleTxt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:shadowColor="@color/common_shadow_color"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/extendView_right"
            android:layout_width="57dp"
            android:layout_height="46dp"
            android:layout_gravity="center|right"
            android:orientation="horizontal"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="1dp"
                android:layout_height="45dp"
                android:background="#5baee6"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/rightView"
                android:layout_width="57dp"
                android:layout_height="46dp"
                android:gravity="center"
                android:orientation="horizontal" >
                <TextView 
                    android:id="@+id/rightText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编辑"
                    android:textColor="@color/white"
                    android:visibility="gone"/>
                <Button
                android:id="@+id/rightbtn"
                android:layout_width="57dp"
                android:layout_height="match_parent"
                android:background="@drawable/user_detail_info_right_top"
                android:visibility="gone" />

                </LinearLayout>
        </LinearLayout>
    </com.iwgame.msgs.widget.TitleLinearLayout>

</LinearLayout>