<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/global_color4"
    android:orientation="horizontal" >
     <ImageView
        android:id="@+id/iv_list_item"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/global_menu_group_item_height"
        android:src="@drawable/discover_sort_true_pre"
        android:layout_marginLeft="@dimen/global_padding9"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_list_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/global_menu_group_item_height"
        android:layout_marginLeft="@dimen/global_padding1"
        android:gravity="left|center_vertical"
        style="@style/text_size8_color5_default" />

</LinearLayout>
