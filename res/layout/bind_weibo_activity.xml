<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/set_first_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/sina_weibo_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/global_list_item_height_small"
        android:layout_marginTop="@dimen/global_padding9"
        android:background="@drawable/common_set_bg_shap"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/sina_weibo_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/global_padding8"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/global_padding3"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="新浪微博"
            android:textColor="@color/bund_weibo_name_text_color"
            android:textSize="@dimen/global_font_size2" />

        <TextView
            android:id="@+id/sina_bind_state"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/global_padding3"
            android:layout_weight="1"
            android:gravity="center|right"
            android:singleLine="true"
            android:textSize="@dimen/global_font_size2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginLeft="@dimen/global_padding7"
            android:layout_marginRight="@dimen/global_padding8"
            android:background="@drawable/common_icon_jt_selector"
            android:duplicateParentState="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tencent_weibo_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/global_list_item_height_small"
        android:gravity="center"
        android:background="@drawable/common_set_bg_shap"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/tencent_weibo_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/global_padding8"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/global_padding3"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="腾讯微博"
            android:textColor="@color/bund_weibo_name_text_color"
            android:textSize="@dimen/global_font_size2" />

        <TextView
            android:id="@+id/tencent_bind_state"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/global_padding3"
            android:layout_weight="1"
            android:gravity="center|right"
            android:singleLine="true"
            android:textSize="@dimen/global_font_size2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginLeft="@dimen/global_padding7"
            android:layout_marginRight="@dimen/global_padding8"
            android:background="@drawable/common_icon_jt_selector"
            android:duplicateParentState="true" />
    </LinearLayout>

    <View 
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        android:background="@color/set_setting_item_stroke"
        />
</LinearLayout>