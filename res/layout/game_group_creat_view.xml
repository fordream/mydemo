<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudcolor"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        android:background="@drawable/group_blank" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="@dimen/global_padding8"
        android:text="第一个创建该游戏公会可免费升级到LV2哦，还等什么呢？"
        android:textColor="@color/global_color7"
        android:textSize="@dimen/global_font_size8" />

    <LinearLayout
        android:id="@+id/creatGroup"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/global_padding4"
        android:layout_marginLeft="@dimen/global_padding5"
        android:layout_marginRight="@dimen/global_padding5"
        android:layout_marginTop="60dp"
        android:background="@drawable/game_group_creat_bg_selector"
        android:gravity="center" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/group_blank_add" />
    </LinearLayout>

</LinearLayout>