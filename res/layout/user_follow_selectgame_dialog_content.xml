<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     android:background="@drawable/common_discover_dialong_game_bg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/global_padding3"
        android:layout_marginTop="@dimen/global_padding9"
        android:text="贴吧组"
        android:textColor="@color/global_color19"
        android:textSize="@dimen/global_font_size8" />

    <RelativeLayout
        android:id="@+id/game_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/global_padding7"
        android:layout_marginRight="@dimen/global_padding7"
        android:layout_marginTop="@dimen/global_padding3"
        android:layout_marginBottom="@dimen/global_padding9"
        android:padding="@dimen/global_padding1"
        android:background="@drawable/common_discover_dialong_game_bg" >

        <HorizontalScrollView
            android:id="@+id/gameSelectItemView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:scrollbars="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/gameSelect1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/gameSelect2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/global_padding2"
                    android:orientation="horizontal" />
            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/gameDefaultSelectItem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="您还未关注任何游戏"
            android:textColor="@color/global_color2"
            android:textSize="@dimen/global_font_size2"
            android:visibility="invisible" />
    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/loading_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/global_padding9"
        android:layout_marginLeft="@dimen/global_padding7"
        android:layout_marginRight="@dimen/global_padding7"
        android:layout_marginTop="@dimen/global_padding3"
        android:padding="@dimen/global_padding1"
        android:background="@drawable/common_discover_dialong_game_bg" 
        android:orientation="vertical"
        android:gravity="center"
        ></LinearLayout>
</LinearLayout>