<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:iwgame="http://schemas.android.com/apk/res-auto"
    style="@style/global_list_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg_selector" >

    <com.iwgame.msgs.widget.roundedimageview.RoundedImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/global_icon_1"
        android:layout_height="@dimen/global_icon_1"
        android:scaleType="centerCrop"
        android:src="@drawable/common_default_icon"
        iwgame:border_width="0dp"
        iwgame:corner_radius="8dp"
        iwgame:oval="false" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/global_padding1"
        android:layout_marginRight="@dimen/global_padding1"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/gamename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:textColor="@color/item_first_grade_left_color"
            android:textSize="@dimen/global_font_size2" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:textColor="@color/item_second_grade_color"
            android:textSize="@dimen/global_font_size3" />
    </LinearLayout>

    <ImageView
        android:id="@+id/tagView"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/common_item_right_nor"
        android:layout_marginRight="@dimen/global_padding8"
        android:visibility="visible" />

</LinearLayout>