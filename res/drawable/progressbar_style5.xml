<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp" />

            <gradient
                android:angle="0"
                android:endColor="@color/progress_backgroup_color"
                android:startColor="@color/progress_backgroup_color" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:bottomLeftRadius="10dp"
                    android:bottomRightRadius="10dp"
                    android:topLeftRadius="10dp"
                    android:topRightRadius="10dp" />

                <gradient
                    android:angle="0"
                    android:endColor="@color/progress_bg_color2"
                    android:startColor="@color/progress_bg_color2"/>
            </shape>
        </clip>
    </item>

</layer-list>